      /* Add a card effect for articles */
      .card {
         background-color: white;
         padding: 20px;
         margin-top: 20px;
         margin-right:20px;
          box-shadow: 5px 5px 30px 15px rgba(0,0,0,0.01),
          -5px -5px 30px 15px rgba(0,0,0,0.02);

      }
      /* Clear floats after the columns */
      .row:after {
        content: "";
        display: table;
        clear: both;
      }

      .description {
        margin-left: 80px;
        margin-right: 85px;
        letter-spacing: 1px;
        line-height: 35px;
