<html lang="en">
  <head>
    <title>Login</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/logo.png" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/mobile.css" />
    <style>
      * {
        box-sizing: border-box;
        font-family: "Ubuntu", sans-serif;
      }
      body {
        background: rgb(209, 198, 198);
      }
      input {
        width: 75%;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <div class="container mt-5">
      <div class="card" style="background: transparent;border: none;">
        <!-- <div class="card-header">Header</div> -->
        <div class="card-body" style="padding: 0;">
          <div class="row">
            <div class="col-lg-1"></div>
            <div class="col-lg-5" style="padding:0">
              <img
                src="/img/office.jpeg"
                alt="office image"
                style="width: 100%;height: 85vh;"
              />
            </div>
            <div
              class="col-lg-5"
              style="background: white;margin:0;padding:0;padding-top: 5vw;text-align: center;"
            >
              <a href="/"
                ><img src="/logo.png" alt="" style="height: 100px;width: auto;"
              /></a>
              <h4 style="margin-bottom: 4vw;"><u>LOGIN FORM</u></h4>
              <form action="/admin" method="POST">
                <div class="row">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-8">
                    <div class="form-group">
                      <input
                        type="email"
                        class="form-control"
                        placeholder="Enter email"
                        id="email"
                        name="email"
                      />
                    </div>
                    <div class="form-group">
                      <input
                        type="password"
                        class="form-control"
                        placeholder="Enter password"
                        id="pwd"
                        name="pwd"
                      />
                    </div>
                    <button type="submit" class="btn btn-primary">Login</button>
                    <p class="mt-3">
                      Don't have an account?
                      <a href="/signup" style="text-decoration: none;"
                        >Signup</a
                      >
                    </p>
                  </div>
                  <div class="col-lg-2"></div>
                </div>
              </form>
            </div>
            <div class="col-lg-1"></div>
          </div>
        </div>
        <!-- <div class="card-footer">Footer</div> -->
      </div>
    </div>
    <p class="text-center copyright">
      Copyright &copy;
      <script>
        document.write(new Date().getFullYear());
      </script>
      All rights reserved . OSOS PVT LTD.
    </p>
  </body>
</html>
